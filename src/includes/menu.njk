{% set menu = [{
    title: 'Статьи',
    url: '/articles/'
},{
    title: 'Подкаст',
    url: '/podcast/'
}] %}

<ul class="menu__list" id="menu__list">
    {% for item in menu %}
        {% if item.url and item.url == page.url %}
            {% set currentPage = true %}
        {% else %}
            {% set currentPage = false %}
        {% endif %}
        <li class="menu__item">
            <a class="menu__link" href="{{ item.url }}" {% if currentPage %}aria-current="page"{% endif %}>
                {{ item.title }}
            </a>
        </li>
    {% endfor %}
    <li class="menu__item menu__item--scheme-switcher">
        <button class="scheme-switcher__button" aria-label="Переключить тёмную тему">
            <svg class="scheme-switcher__icon" aria-hidden="true" width="20" height="20">
                <use class="scheme-switcher__icon-moon"
                    href="{{ path }}images/sprite.svg#moon">
                </use>
                <use class="scheme-switcher__icon-sun"
                    href="{{ path }}images/sprite.svg#sun">
                </use>
            </svg>
        </button>
    </li>
</ul>
